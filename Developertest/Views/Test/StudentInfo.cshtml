@model Developertest.Models.Test

@{
    ViewBag.Title = "StudentInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Student Info</h2>

<p>
    <form method="post"">
        <div class="form-group">
            <div class="col-md-6">
                @Html.EditorFor(model => model.StudentName, new { htmlAttributes = new { @class = "form-control" } })
               <br />
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </form>
</p>

<table class="table">
    <tr>
        <th>
            Student name
        </th>
        <th>
            Student Age
        </th>
        <th>
            Images
        </th>
        
        <th>
           Class
        </th>
        <th>
            Roll No.
        </th>
    </tr>

@foreach (var item in Model.Studentlst) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StudentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.age)
        </td>
        <td>
            <a href="@Url.Content(item.image)" class="resume-link" target="_blank">View Photo</a>
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Class)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rollno)
        </td>
        
    </tr>
}

</table>
<div>
    @Html.ActionLink("Back to List", "StudentInfo")
</div>
